@page
@model IndexModel
@{
    ViewData["Title"] = "Ferry Timetables";
}

@section Sidebar {
    <form id="filterForm" method="get">
        <div class="filter-section">
            <h3>Date</h3>
            <div class="mb-3">
                <input type="date" class="form-control" id="dateFilter" name="date" value="@(Model.Date?.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))" />
            </div>
        </div>

        <div class="filter-section">
            <h3>Departure Island</h3>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="from" value="Tahiti" id="tahitiCheck" checked="@Model.From.Contains("Tahiti")">
                <label class="form-check-label" for="tahitiCheck">Tahiti</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="from" value="Moorea" id="mooreCheck" checked="@Model.From.Contains("Moorea")">
                <label class="form-check-label" for="mooreCheck">Moorea</label>
            </div>
        </div>

        <div class="filter-section">
            <h3>Companies</h3>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="company" value="Aremiti" id="aremitiCheck" checked="@Model.Company.Contains("Aremiti")">
                <label class="form-check-label" for="aremitiCheck">Aremiti</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="company" value="Terevau" id="terevauCheck" checked="@Model.Company.Contains("Terevau")">
                <label class="form-check-label" for="terevauCheck">Terevau</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="company" value="Vaearai" id="vaearaiCheck" checked="@Model.Company.Contains("Vaearai")">
                <label class="form-check-label" for="vaearaiCheck">Vaearai</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="company" value="Tauati" id="tauatiCheck" checked="@Model.Company.Contains("Tauati")">
                <label class="form-check-label" for="tauatiCheck">Tauati</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
    </form>
}

<div class="text-center mb-4">
    <h1 class="display-4">Upcoming ferries</h1>
    <div id="loadingIndicator" style="display: none;" class="text-center mb-3">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered mb-0">
            <thead>
                <tr>
                    <th>Departure</th>
                    <th>From</th>
                    <th>Company</th>
                </tr>
            </thead>
            <tbody id="timetableBody">
                @foreach (var timetable in Model.FilteredTimetables)
                {
                    <tr>
                        <td>@timetable.Departure.ToString("HH:mm")</td>
                        <td>@timetable.Origin</td>
                        <td>@timetable.Company</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p id="noDataMessage" class="alert alert-warning" style="display: @(Model.FilteredTimetables.Any() ? "none" : "block")">
        No upcoming ferries found matching your filters.
    </p>

@section Scripts {
    <script src="~/js/timetable.js"></script>
}
</div>